extends ../layout

block content
    .row
        .col-md-12
            .lists
                p 名称：#{role.name}
                p 创建人: 
                    if (role.author)
                        | #{role.author.username}
                    else
                        | 无
                p 权限：
                    - each action in role.actions
                        span.label.label-info
                            | #{action}
                        | 
                p 日期：#{role.created}
                p 描述：!{role.description}
