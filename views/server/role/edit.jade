extends ../layout

block content
    .row
        .col-md-12
            .panel.panel-default
                .panel-heading
                    h3.panel-title 編輯角色                            
                .panel-body                    
                    form(action='', method='post')
                        .form-group
                            label 名称
                            input.form-control(name='name', value='#{data.name}')
                        .form-group
                            label 权限
                            h4 选择权限
                            - each action in ACTIONS
                                | #{action.name}
                                ul.list-group
                                    - each item in action.actions
                                        li.list-group-item
                                            - var checked = data.actions.indexOf(item.value) > -1 ? 'checked' : undefined;
                                            label
                                                input(name='actions[]', type='checkbox', value='#{item.value}', checked=checked)
                                                | #{item.name} (#{item.description})
                        .form-group
                            label 描述
                            textarea.form-control(name='description', rows='8') #{data.description}
                        input(type='hidden', name='_csrf', value='#{token}')
                        button.btn.btn-primary(type='submit') 提交

block foot-js
    script.
        Messenger.options = {
            extraClasses: 'messenger-fixed messenger-on-bottom messenger-on-right',
            theme: 'flat'
        };
        $(function() {
            var messenger;
            $('form').ajaxForm({
                beforeSerialize: function() {
                    console.log('beforeSerialize')
                },
                beforeSubmit: function() {
                    console.log('beforeSubmit')
                    messenger = Messenger().post("處理中...");
                },
                success: function(data, status, xhr, $form) {
                    console.log(data)
                    var status = data.status;
                    if (status) {
                        messenger.update({
                            message: '更新成功',
                            hideAfter: 3,
                            type: 'success'
                        });
                    } else {
                        messenger.update({
                            message: '更新失败',
                            hideAfter: 3,
                            type: 'success'
                        });
                    }
                },
                err: function() {
                    console.log('error')
                    messenger.update({
                        message: '系统繁忙',
                        hideAfter: 3,
                        type: 'success'
                    });
                }
            })
        })